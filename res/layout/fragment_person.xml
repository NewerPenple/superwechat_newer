<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eff2f6"
    tools:context="newer.project.fulicenter.fragment.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@color/personal_center_top_bg">

        <ImageView
            android:id="@+id/iv_msg_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:src="@drawable/tb_icon_more_msg_white_56"
            />

        <TextView
            android:id="@+id/tv_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toLeftOf="@id/iv_msg_icon"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp"
            />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/niv_user_avatar"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="5dp"
            android:text="用户"
            android:textColor="#fff"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/iv_qrcode_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_user_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/tb_icon_home_qrcode_normal"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#CC552C"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_collect_count"
            android:layout_width="@dimen/ebpay_dimen_20dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_collect_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="2"
                android:textColor="#fff"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_collect_count"
                android:layout_marginTop="5dp"
                android:text="收藏的宝贝"
                android:textColor="#fff"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <RelativeLayout
            android:layout_width="@dimen/ebpay_dimen_20dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shop_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="28"
                android:textColor="#fff"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_shop_count"
                android:layout_marginTop="5dp"
                android:text="收藏的店铺"
                android:textColor="#fff"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <RelativeLayout
            android:layout_width="@dimen/ebpay_dimen_20dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_user_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="58"
                android:textColor="#fff"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_user_history"
                android:layout_marginTop="5dp"
                android:text="我的足迹"
                android:textColor="#fff"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_orders"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="我的订单"
                    android:textColor="#000"
                    android:textSize="20sp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:text="查看全部已购宝贝  "
                    android:textColor="#000"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_order1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/order_list2"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_order2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/order_list3"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_order3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/order_list4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_order4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/order_list1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_order5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/order_list5"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <RelativeLayout
                    android:id="@+id/layout_card_list"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="我的卡卷包"
                        android:textColor="#000"
                        android:textSize="20sp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_right_arrow"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_card1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/center_card_coupon1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:gravity="center_vertical"
                        android:text="生活卷"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_right_arrow"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_card2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/center_card_coupon2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:gravity="center_vertical"
                        android:text="网店卷"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:text="暂无可用优惠卷  "
                        android:textColor="#505050"
                        android:textSize="18sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_card3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/center_card_coupon3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:gravity="center_vertical"
                        android:text="会员卡"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:text="一卡在手，逛店无忧  "
                        android:textColor="#505050"
                        android:textSize="18sp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_privilege"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="我的专享特权"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:text="领金币，看优惠  "
                    android:textColor="#505050"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
