<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newer.project.fulicenter.activity.CategoryDetailActivity"
    android:orientation="vertical"
    android:background="#eff2f6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/good_detail_title_bg"
            android:paddingTop="3dp"
            android:paddingBottom="3sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@drawable/back_nomal"
                />
        </LinearLayout>

        <newer.project.fulicenter.widget.CatChildFilterButton
            android:id="@+id/btn_category_detail_cat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:drawableRight="@drawable/arrow2_down"
            android:text="分类"
            android:textSize="20sp"
            android:textColor="#fff"
            />

        <newer.project.fulicenter.widget.ColorFilterButton
            android:id="@+id/btn_category_detail_screen"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ff8c00"
            android:gravity="center"
            android:text="筛选"
            android:textColor="#fff"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="@color/main_orange">

        <Button
            android:id="@+id/btn_category_detail_by_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:drawableRight="@drawable/arrow_order_down"
            android:text="价格"
            android:textColor="#000"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btn_category_detail_by_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:drawableRight="@drawable/arrow_order_down"
            android:text="上架时间"
            android:textColor="#000"
            android:textSize="20sp"
            />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srLayout_category_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_detail_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/now_refresh"
                android:visibility="gone"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_category_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
